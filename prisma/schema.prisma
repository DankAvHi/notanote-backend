generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Note {
  id        String   @id @default(ulid())
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  author   User   @relation(fields: [authorId], references: [id])
  authorId String
}

model User {
  id        String   @id @default(uuid())
  name      String   @unique
  password  String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  notes Note[]

  @@map("users")
}
